<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Enable WebSocket support -->
    <webSocket enabled="true" />
    
    <!-- Configure proxy settings directly -->
    <proxy enabled="true" preserveHostHeader="false" reverseRewriteHostInResponseHeaders="false" />
    
    <!-- URL Rewrite rules for API Gateway -->
    <rewrite>
      <rules>
        
        <!-- Chat Hub WebSocket Rule -->
        <rule name="ChatHub WebSocket" stopProcessing="true">
          <match url="^chat/chathub/(.*)" />
          <conditions>
            <add input="{HTTP_CONNECTION}" pattern="Upgrade" ignoreCase="true" />
            <add input="{HTTP_UPGRADE}" pattern="websocket" ignoreCase="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:5002/chathub/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="{HTTPS}" />
          </serverVariables>
        </rule>

        <!-- Agent Hub WebSocket Rule -->
        <rule name="AgentHub WebSocket" stopProcessing="true">
          <match url="^agent/agenthub/(.*)" />
          <conditions>
            <add input="{HTTP_CONNECTION}" pattern="Upgrade" ignoreCase="true" />
            <add input="{HTTP_UPGRADE}" pattern="websocket" ignoreCase="true" />
          </conditions>
          <action type="Rewrite" url="http://localhost:5001/agent/agenthub/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="{HTTPS}" />
          </serverVariables>
        </rule>

        <!-- Chat Hub Regular HTTP Rule -->
        <rule name="ChatHub HTTP" stopProcessing="true">
          <match url="^chat/(.*)" />
          <action type="Rewrite" url="http://localhost:5002/chathub/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="{HTTPS}" />
          </serverVariables>
        </rule>

        <!-- Agent Hub Regular HTTP Rule -->
        <rule name="AgentHub HTTP" stopProcessing="true">
          <match url="^agent/(.*)" />
          <action type="Rewrite" url="http://localhost:5001/agent/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="{HTTPS}" />
          </serverVariables>
        </rule>

        <!-- Chatbot API Rule -->
        <rule name="Chatbot API" stopProcessing="true">
          <match url="^chatbot/(.*)" />
          <action type="Rewrite" url="http://localhost:5002/chat/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="{HTTPS}" />
          </serverVariables>
        </rule>

        <!-- Identity API Rule -->
        <rule name="Identity API" stopProcessing="true">
          <match url="^identity/(.*)" />
          <action type="Rewrite" url="http://localhost:5000/identity/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="{HTTPS}" />
          </serverVariables>
        </rule>

        <!-- Analytics API Rule -->
        <rule name="Analytics API" stopProcessing="true">
          <match url="^analytic/(.*)" />
          <action type="Rewrite" url="http://localhost:5003/analytic/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="{HTTPS}" />
          </serverVariables>
        </rule>

        <!-- Default API Rule (fallback) -->
        <rule name="Default API" stopProcessing="true">
          <match url="^(.*)$" />
          <action type="Rewrite" url="http://localhost:5000/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_FOR" value="{REMOTE_ADDR}" />
            <set name="HTTP_X_FORWARDED_HOST" value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="{HTTPS}" />
          </serverVariables>
        </rule>

      </rules>
    </rewrite>

    <!-- CORS Configuration -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With" />
        <add name="Access-Control-Allow-Credentials" value="true" />
      </customHeaders>
    </httpProtocol>

    <!-- Handle OPTIONS requests for CORS -->
    <handlers>
      <add name="OptionsHandler" verb="OPTIONS" path="*" type="System.Web.DefaultHttpHandler" modules="DefaultDocumentModule,DirectoryListingModule,IsapiFilterModule,RequestFilteringModule,StaticFileModule" />
    </handlers>

    <!-- Server Variables for Forwarding -->
    <rewrite>
      <allowedServerVariables>
        <add name="HTTP_X_FORWARDED_FOR" />
        <add name="HTTP_X_FORWARDED_HOST" />
        <add name="HTTP_X_FORWARDED_PROTO" />
      </allowedServerVariables>
    </rewrite>

  </system.webServer>
</configuration>
