# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=30000
VITE_SIGNALR_HUB_URL=http://localhost:8000/agent/agenthub

# Application Configuration
VITE_APP_NAME=Live Agent Interface
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Development Server Configuration
VITE_DEV_SERVER_PORT=5175
VITE_DEV_SERVER_HOST=0.0.0.0

# Authentication Configuration
VITE_JWT_SECRET=your-jwt-secret-key-here
VITE_TOKEN_EXPIRE_TIME=86400000
VITE_REFRESH_TOKEN_EXPIRE_TIME=604800000

# Feature Flags
VITE_ENABLE_SIGNALR=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_RTL_SUPPORT=true

# Default Language and Locale
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,ar
VITE_DEFAULT_TIMEZONE=UTC

# Real-time Configuration
VITE_SIGNALR_AUTO_RECONNECT=true
VITE_SIGNALR_RECONNECT_DELAY=5000
VITE_SIGNALR_MAX_RECONNECT_ATTEMPTS=5

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_PAGE_SIZE=20
VITE_MAX_FILE_UPLOAD_SIZE=10485760

# Logging Configuration
VITE_LOG_LEVEL=debug
VITE_ENABLE_CONSOLE_LOGS=true

# Development Tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true

# WebSocket Configuration
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_CONNECTION_TIMEOUT=10000

# Branding Configuration
VITE_COMPANY_NAME=Arif AI Chatbot
VITE_COMPANY_LOGO=/logo.png
VITE_FAVICON=/favicon.ico

# Error Tracking (optional)
# VITE_SENTRY_DSN=your-sentry-dsn-here
# VITE_ENABLE_ERROR_TRACKING=false

# Performance Monitoring (optional)
# VITE_ENABLE_PERFORMANCE_MONITORING=false

# Social Login (if implemented)
# VITE_GOOGLE_CLIENT_ID=your-google-client-id
# VITE_MICROSOFT_CLIENT_ID=your-microsoft-client-id