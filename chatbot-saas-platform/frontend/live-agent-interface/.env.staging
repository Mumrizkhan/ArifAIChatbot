# API Configuration
VITE_API_BASE_URL=https://api-stg-arif.tetco.sa
VITE_API_URL=https://api-stg-arif.tetco.sa
VITE_SIGNALR_HUB_URL=https://api-stg-arif.tetco.sa/agentHub

# Application Configuration
VITE_APP_NAME=Live Agent Interface
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=staging

# Development Server Configuration
VITE_DEV_SERVER_PORT=5175
VITE_DEV_SERVER_HOST=0.0.0.0

# Authentication Configuration
VITE_JWT_SECRET=staging-jwt-secret-key-change-in-production
VITE_TOKEN_EXPIRE_TIME=86400000
VITE_REFRESH_TOKEN_EXPIRE_TIME=604800000

# Feature Flags
VITE_ENABLE_SIGNALR=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_RTL_SUPPORT=true

# Default Language and Locale
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,ar
VITE_DEFAULT_TIMEZONE=UTC

# Real-time Configuration
VITE_SIGNALR_AUTO_RECONNECT=true
VITE_SIGNALR_RECONNECT_DELAY=5000
VITE_SIGNALR_MAX_RECONNECT_ATTEMPTS=10

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
VITE_PAGE_SIZE=20
VITE_MAX_FILE_UPLOAD_SIZE=10485760

# Logging Configuration
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGS=false

# Development Tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=false

# WebSocket Configuration
VITE_WS_HEARTBEAT_INTERVAL=30000
VITE_WS_CONNECTION_TIMEOUT=15000

# Branding Configuration
VITE_COMPANY_NAME=Arif AI Chatbot
VITE_COMPANY_LOGO=/logo.png
VITE_FAVICON=/favicon.ico

# Error Tracking
VITE_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id
VITE_ENABLE_ERROR_TRACKING=true

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# CDN Configuration (if using)
VITE_CDN_URL=https://staging-cdn.arifaichatbot.com
VITE_STATIC_ASSETS_URL=https://staging-assets.arifaichatbot.com

# Social Login (if implemented)
# VITE_GOOGLE_CLIENT_ID=your-staging-google-client-id
# VITE_MICROSOFT_CLIENT_ID=your-staging-microsoft-client-id

# Rate Limiting
VITE_API_RATE_LIMIT=1000
VITE_API_RATE_WINDOW=3600000

# Cache Configuration
VITE_CACHE_TTL=300000
VITE_ENABLE_SERVICE_WORKER=true

# Security Headers
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true