# ===========================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===========================================

# Application Configuration
VITE_APP_NAME=Arif AI Chatbot Platform
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_APP_DEBUG=true

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Backend Services
VITE_BACKEND_URL=http://localhost:8000
VITE_CHATBOT_SERVICE_URL=http://localhost:8000
VITE_ANALYTICS_SERVICE_URL=http://localhost:8000
VITE_WORKFLOW_SERVICE_URL=http://localhost:8000

# Authentication & Security
VITE_JWT_SECRET=dev_jwt_secret_key_change_in_production
VITE_JWT_EXPIRES_IN=24h
VITE_REFRESH_TOKEN_EXPIRES_IN=7d
VITE_AUTH_COOKIE_NAME=arif_auth_token
VITE_AUTH_COOKIE_DOMAIN=localhost

# SignalR Configuration
VITE_SIGNALR_HUB_URL=http://localhost:8000/hubs
VITE_SIGNALR_TENANT_HUB=/tenantHub
VITE_SIGNALR_ANALYTICS_HUB=/analyticsHub
VITE_SIGNALR_CHAT_HUB=/chatHub
VITE_SIGNALR_AUTO_RECONNECT=true
VITE_SIGNALR_RECONNECT_INTERVAL=5000

# Database Configuration (for client-side display purposes)
VITE_DB_NAME=chatbot_platform_dev
VITE_REDIS_ENABLED=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.txt,.pdf,.docx,.md,.json,.csv
VITE_UPLOAD_ENDPOINT=/api/v1/files/upload
VITE_FILE_STORAGE_URL=http://localhost:8000/files

# AI & Chatbot Configuration
VITE_OPENAI_API_URL=https://api.openai.com/v1
VITE_DEFAULT_AI_MODEL=gpt-3.5-turbo
VITE_MAX_TOKENS=1000
VITE_DEFAULT_TEMPERATURE=0.7
VITE_CHATBOT_RESPONSE_DELAY=1500

# Analytics Configuration
VITE_ANALYTICS_ENABLED=true
VITE_ANALYTICS_REAL_TIME=true
VITE_ANALYTICS_REFRESH_INTERVAL=30000
VITE_EXPORT_FORMATS=csv,pdf,excel

# Subscription & Billing
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key_here
VITE_BILLING_PORTAL_URL=http://localhost:8000/billing
VITE_SUBSCRIPTION_WEBHOOK_URL=http://localhost:8000/webhooks/stripe

# Feature Flags
VITE_FEATURE_WORKFLOWS=true
VITE_FEATURE_TEAM_MANAGEMENT=true
VITE_FEATURE_ADVANCED_ANALYTICS=true
VITE_FEATURE_MULTI_LANGUAGE=true
VITE_FEATURE_VOICE_MESSAGES=true
VITE_FEATURE_FILE_UPLOADS=true
VITE_FEATURE_CRM_INTEGRATION=true
VITE_FEATURE_REAL_TIME_UPDATES=true

# Internationalization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,ar
VITE_RTL_LANGUAGES=ar
VITE_FALLBACK_LANGUAGE=en

# Theme & Branding
VITE_DEFAULT_THEME=light
VITE_THEME_OPTIONS=light,dark,auto
VITE_PRIMARY_COLOR=#3b82f6
VITE_SECONDARY_COLOR=#10b981
VITE_BRAND_NAME=Arif AI

# Notification Configuration
VITE_NOTIFICATION_TIMEOUT=5000
VITE_MAX_NOTIFICATIONS=5
VITE_ENABLE_BROWSER_NOTIFICATIONS=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true

# Development Tools
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_ERROR_BOUNDARY=true

# Performance Configuration
VITE_PAGINATION_DEFAULT_SIZE=10
VITE_PAGINATION_MAX_SIZE=100
VITE_DEBOUNCE_DELAY=300
VITE_CACHE_TTL=300000

# WebSocket Configuration
VITE_WS_ENABLED=true
VITE_WS_URL=ws://localhost:8000/ws
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000

# Email Configuration (for client-side validation)
VITE_SMTP_ENABLED=true
VITE_EMAIL_VALIDATION_REGEX=^[^\s@]+@[^\s@]+\.[^\s@]+$

# Social Authentication (if implemented)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here

# CDN & Assets
VITE_CDN_URL=http://localhost:8000/assets
VITE_STATIC_ASSETS_URL=http://localhost:8000/static
VITE_AVATAR_DEFAULT_URL=/default-avatar.png

# Logging Configuration
VITE_LOG_LEVEL=debug
VITE_LOG_TO_CONSOLE=true
VITE_LOG_TO_SERVER=false
VITE_ERROR_REPORTING_ENABLED=false

# Rate Limiting (client-side awareness)
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=3600000

# Chatbot Widget Configuration
VITE_WIDGET_DEFAULT_POSITION=bottom-right
VITE_WIDGET_DEFAULT_SIZE=medium
VITE_WIDGET_AUTO_OPEN=false
VITE_WIDGET_AUTO_OPEN_DELAY=5000
VITE_WIDGET_MAX_HEIGHT=600
VITE_WIDGET_MAX_WIDTH=400

# Team Management
VITE_MAX_TEAM_MEMBERS=50
VITE_DEFAULT_AGENT_ROLE=agent
VITE_INVITATION_EXPIRY_DAYS=7

# Analytics Limits
VITE_MAX_CHART_DATA_POINTS=100
VITE_ANALYTICS_DATE_RANGE_LIMIT=365
VITE_REAL_TIME_UPDATE_INTERVAL=5000

# Workflow Configuration
VITE_MAX_WORKFLOW_STEPS=20
VITE_WORKFLOW_EXECUTION_TIMEOUT=300000
VITE_MAX_WORKFLOWS_PER_TENANT=100

# Security Headers (client-side awareness)
VITE_CSP_ENABLED=true
VITE_CORS_ENABLED=true
VITE_SECURE_COOKIES=false

# Testing Configuration
VITE_TEST_MODE=false
VITE_MOCK_API_RESPONSES=false
VITE_E2E_TEST_SELECTORS=true

# ===========================================
