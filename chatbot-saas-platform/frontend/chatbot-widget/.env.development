# Development Environment Configuration
# Note: NODE_ENV is automatically set by Vite based on the build mode

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000
# Direct connection to Chat Runtime Service for SignalR
VITE_WEBSOCKET_URL=http://localhost:8000/chat/chathub
VITE_CHATBOT_API_ENDPOINT=/chatbot

# Authentication & Security
VITE_JWT_SECRET_KEY=your-dev-jwt-secret-here
VITE_API_KEY=your-dev-api-key-here

# Chatbot Configuration
VITE_CHATBOT_NAME=Arif AI Chatbot
VITE_DEFAULT_AVATAR_URL=/assets/default-avatar.png
VITE_CHATBOT_THEME=light
VITE_TYPING_DELAY=1000
VITE_MAX_MESSAGE_LENGTH=2000

# Feature Flags
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_EMOJI_PICKER=true
VITE_ENABLE_TYPING_INDICATOR=true

# Development Tools
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_ENABLE_REDUX_DEVTOOLS=true

# Widget Configuration
VITE_WIDGET_POSITION=bottom-right
VITE_WIDGET_THEME_COLOR=#007bff
VITE_WIDGET_WIDTH=400
VITE_WIDGET_HEIGHT=600

# Analytics & Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=
VITE_ERROR_REPORTING=true

# Rate Limiting
VITE_MESSAGE_RATE_LIMIT=10
VITE_RATE_LIMIT_WINDOW=60000