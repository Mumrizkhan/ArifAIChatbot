# Staging Environment Configuration
NODE_ENV=staging

# API Configuration
VITE_API_URL=https://staging-api.yourapp.com/api
VITE_WEBSOCKET_URL=http://staging-api.yourapp.com
VITE_CHATBOT_API_ENDPOINT=/chatbot

# Authentication & Security
VITE_JWT_SECRET_KEY=your-staging-jwt-secret-here
VITE_API_KEY=your-staging-api-key-here

# Chatbot Configuration
VITE_CHATBOT_NAME=Arif AI Chatbot (Staging)
VITE_DEFAULT_AVATAR_URL=/assets/default-avatar.png
VITE_CHATBOT_THEME=light
VITE_TYPING_DELAY=800
VITE_MAX_MESSAGE_LENGTH=2000

# Feature Flags
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_VOICE_INPUT=false
VITE_ENABLE_EMOJI_PICKER=true
VITE_ENABLE_TYPING_INDICATOR=true

# Development Tools
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=warn
VITE_ENABLE_REDUX_DEVTOOLS=false

# Widget Configuration
VITE_WIDGET_POSITION=bottom-right
VITE_WIDGET_THEME_COLOR=#007bff
VITE_WIDGET_WIDTH=400
VITE_WIDGET_HEIGHT=600

# Analytics & Monitoring
VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_ID=your-staging-analytics-id
VITE_ERROR_REPORTING=true

# Rate Limiting
VITE_MESSAGE_RATE_LIMIT=15
VITE_RATE_LIMIT_WINDOW=60000